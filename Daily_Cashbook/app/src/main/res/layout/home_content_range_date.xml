<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightGreen"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/lightGreen"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="日期："
                android:textColor="@color/bg_white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/fg_home_time_begin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="起始日期"
                android:textColor="@color/bg_white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/fg_home_time_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="结束日期"
                android:textColor="@color/bg_white"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/bg_white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/lightGreen"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/home_tvoutcome_rd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支出："
                android:textSize="14sp"
                android:textColor="@color/bg_white" />

            <TextView
                android:id="@+id/home_nboutcome_rd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="0"
                android:textSize="16sp"
                android:textColor="@color/bg_white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@color/lightGreen"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/home_tvincome_rd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收入："
                android:textSize="14sp"
                android:textColor="@color/bg_white" />

            <TextView
                android:id="@+id/home_nbincome_rd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="0"
                android:textSize="16sp"
                android:textColor="@color/bg_white" />

        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <FrameLayout
        android:id="@+id/home_rd_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </FrameLayout>

</LinearLayout>